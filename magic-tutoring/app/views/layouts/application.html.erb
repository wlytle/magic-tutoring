<!DOCTYPE html>
<html>
  <head>
    <title>MagicTutoring</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

<body>
  <nav>
    <% if current_user && current_user.class == Apprentice %>
      <%= link_to "WELCOME!", welcome_path %>
      <%= link_to "WRITING DESK", apprentice_path(current_user) %>
      <%= link_to "DEPART", logout_path, method: "post", data: { confirm: "Have you finished your studies?" } %>
      <%= render "/layouts/nav" %>

    <% elsif current_user && current_user.class == Professor %>
      <%= link_to "WELCOME!", welcome_path %>
      <%= link_to "WRITING DESK", professor_path(current_user) %>
      <%= link_to "DEPART", logout_path, method: "post" %>
      <%= render "/layouts/nav" %>

    <% else %>
      <%= link_to "RETURN", new_session_path %>
      <%= link_to "ENROLL", intermediate_path %>
      <%= render "/layouts/nav" %>
    <% end %>  
  </nav>


    <%= yield %>
  </body>
</html>
