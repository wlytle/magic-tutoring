<h1>Indicate Your Availability</h1>

<% if flash[:danger]%>
    <p class=danger><%= flash[:danger] %></p>
<% end %>

<%= render "form" %>

<%= week_calendar number_of_weeks: 2, events: @professor.professor_availabilities do |date, avails| %>
  <%= date.day %>

  <% avails.each do |avail| %>
    <div>
      <%= link_to "#{avail.format_start_time}, #{pluralize(avail.duration.to_i, "hr")}", edit_professor_availability_path(avail), class: "links" %>
    </div>
  <% end %>
<% end %>
<%= button_to "Back", @professor, method: :get , class: "button"%>